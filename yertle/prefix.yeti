module yertle.prefix;

import java.util: TreeMap;

newPrefixMap () = {
    forward = [:],
    reverse = new TreeMap()
};

typedef pmap = {
    .forward is hash<string, string>,
    .reverse is ~TreeMap
};

addPrefix pm pfx iri is pmap -> string -> string -> () =
   (pm.forward[pfx] := iri;
    do _: () done pm.reverse#put(iri, pfx));

expand pm pname =
   (n = strIndexOf pname ":" 0;
    if n < 0 then pname
    else
        pfx = strLeft pname n;
        if pfx in pm.forward then pm.forward[pfx] ^ (strRight pname (n+1))
        else pname
        fi
    fi);

condense pm fullname =
//!!! use TreeMap.ceilingEntry
    fullname;

prefixes pm =
    keys pm.forward;

typedef opaque prefixmap = pmap;

{
newPrefixMap,
addPrefix,
expand,
condense,
prefixes
} as {
newPrefixMap is () -> prefixmap,
addPrefix is prefixmap -> string -> string -> (),
expand is prefixmap -> string -> string,
condense is prefixmap -> string -> string,
prefixes is prefixmap -> list<string>
}







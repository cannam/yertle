module yertle.store;

index = load yertle.index;

typedef fullnode =
    IRI. string | Blank. number |
        Literal. { 
            .value is string,
            .type is string,
            .language is string
        };

typedef triple = {
    .s is IRI. string | Blank. number,
    .p is IRI. string,
    .o is fullnode,
};

typedef tripleselector = triple -> fullnode;

typedef fullpatnode = Wildcard. () | Known. fullnode;

typedef pattern = {
    .s is Wildcard. () | Known. (IRI. string | Blank. number),
    .p is Wildcard. () | Known. (IRI. string),
    .o is fullpatnode,
};

typedef patternselector = pattern -> fullpatnode;

typedef indextree = hash<fullnode,
                         Sub hash<fullnode,
                                  Sub hash<fullnode,
                                           Entry array<fullnode>>>>;

typedef index = {
    order is list<tripleselector>,
    patternOrder is list<patternselector>,
    tree is indextree
};

typedef storetype = {
    indexes is list<index>,
};

newStore () = 
   (desired = [ "spo", "pos", "ops" ];
    orderMap = [ "s": (.s), "p": (.p), "o": (.o) ];
    patternOrderMap = [ "s": (.s), "p": (.p), "o": (.o) ];
    {
        indexes =
            map do name:
                index.newIndex
                    (map (at orderMap) (tail (strSplit "" name)))
                    (map (at patternOrderMap) (tail (strSplit "" name)))
                done
                desired
    }
    );

add st t =
    all id (map do ix: index.add ix t done st.indexes);

remove st t =
    all id (map do ix: index.remove ix t done st.indexes);

enumerate st =
    index.enumerate (head st.indexes);

contains st t =
    // Doesn't matter which index we use to look up a complete triple
    index.contains (head st.indexes) t;

match st pat =
    index.match (index.chooseIndex st.indexes pat) pat;

typedef opaque store = storetype;

{ newStore, add, remove, enumerate, contains, match }
as
{
newStore is () -> store,
add is store -> triple -> boolean,
remove is store -> triple -> boolean,
enumerate is store -> list<triple>,
contains is store -> triple -> boolean,
match is store -> pattern -> list<triple>
}


